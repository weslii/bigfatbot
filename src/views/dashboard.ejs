<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard - WhatsApp Delivery Bot</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin-dashboard.css" rel="stylesheet">
</head>
<body data-user-id="<%= userId %>">
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <div class="header-left">
                <a href="/dashboard" class="logo-section">
                    <div class="logo-icon"><i class="fas fa-users"></i></div>
                    <div class="logo-text"><span class="main-title">User Dashboard</span></div>
                </a>
            </div>
            <div class="header-right">
                <a href="/dashboard" class="nav-link">Dashboard</a>
                <a href="/orders" class="nav-link">Orders</a>
                <a href="/groups" class="nav-link">Groups</a>
                <button class="btn btn-icon" id="theme-toggle" aria-label="Toggle Theme">
                    <i class="fas fa-sun"></i><i class="fas fa-moon" style="display: none;"></i>
                </button>
                <div class="dropdown">
                    <button class="btn btn-icon" id="profileDropdown"><i class="fas fa-user"></i></button>
                    <div class="dropdown-content" id="profileMenu">
                        <a href="/settings" class="dropdown-item"><i class="fas fa-cog"></i> Settings</a>
                        <form action="/logout" method="post" class="dropdown-item" style="padding: 0; margin: 0;">
                            <button type="submit" style="all: unset; cursor: pointer; display: flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1rem; width: 100%;"><i class="fas fa-sign-out-alt"></i> Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main class="main-content">
        <!-- Stats Overview -->
        <section class="stats-grid">
            <div class="stat-card orders">
                <div class="stat-header">
                    <span class="stat-title">Total Orders</span>
                    <div class="stat-icon">
                        <i class="fas fa-box"></i>
                    </div>
                </div>
                <div class="stat-value"><%= orderStats && orderStats.totalOrders ? orderStats.totalOrders : 0 %></div>
            </div>
            <div class="stat-card completed">
                <div class="stat-header">
                    <span class="stat-title">Completed Orders</span>
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
                <div class="stat-value"><%= orderStats && orderStats.completedOrders ? orderStats.completedOrders : 0 %></div>
            </div>
            <div class="stat-card pending">
                <div class="stat-header">
                    <span class="stat-title">Pending Orders</span>
                    <div class="stat-icon">
                        <i class="fas fa-hourglass-half"></i>
                    </div>
                </div>
                <div class="stat-value"><%= orderStats && orderStats.pendingOrders ? orderStats.pendingOrders : 0 %></div>
            </div>
            <div class="stat-card businesses">
                <div class="stat-header">
                    <span class="stat-title">Businesses</span>
                    <div class="stat-icon">
                        <i class="fas fa-building"></i>
                    </div>
                </div>
                <div class="stat-value"><%= businesses && businesses.length ? businesses.length : 0 %></div>
            </div>
        </section>
        <div class="dashboard-layout">
            <!-- Main Content -->
            <div class="main-panel">
                <!-- Tabs -->
                <div class="tabs-container">
                    <div class="tabs-header">
                        <div class="tabs-nav">
                            <button class="tab-btn active" data-tab="businesses-tab">
                                <i class="fas fa-building"></i> My Businesses
                            </button>
                            <button class="tab-btn" data-tab="groups-tab">
                                <i class="fas fa-users"></i> My Groups
                            </button>
                            <button class="tab-btn" data-tab="orders-tab">
                                <i class="fas fa-box"></i> Recent Orders
                            </button>
                        </div>
                        <div class="tabs-actions">
                            <!-- Removed Add Business, Add Group, and View All Orders buttons from here -->
                        </div>
                    </div>
                    <!-- Businesses Tab -->
                    <div class="tab-content active" id="businesses-tab">
                        <div class="content-card">
                            <div class="card-header">
                                <div class="header-info">
                                    <h2>My Businesses</h2>
                                    <p>All businesses you manage</p>
                                </div>
                                <a href="/add-business" class="primary-btn" style="margin-left:auto;text-decoration:none;"><i class="fas fa-plus"></i> Add Business</a>
                            </div>
                            <div class="card-content">
                                <% if (businesses && businesses.length) { %>
                                    <div class="table-container">
                                        <table class="data-table">
                                            <thead>
                                                <tr>
                                                    <th>Business</th>
                                                    <th>Status</th>
                                                    <th>Orders</th>
                                                    <th>Created</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% businesses.forEach(function(biz) { %>
                                                    <tr>
                                                        <td>
                                                            <div class="business-info">
                                                                <div class="business-avatar"><i class="fas fa-building"></i></div>
                                                                <div class="business-details">
                                                                    <div class="business-name"><a href="/business/<%= biz.business_id %>" class="business-hover" style="color:inherit;text-decoration:none;font-size:1.15rem;font-weight:800;text-transform:capitalize;display:inline-block;line-height:1.2;"><%= biz.business_name %></a></div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <% if (biz.is_active) { %>
                                                                <span class="status-badge active">Active</span>
                                                            <% } else { %>
                                                                <span class="status-badge inactive">Deactivated</span>
                                                            <% } %>
                                                        </td>
                                                        <td><%= biz.order_count %></td>
                                                        <td><%= biz.created_at ? new Date(biz.created_at).toLocaleDateString() : '-' %></td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="empty-placeholder">No businesses found. <a href="/add-business">Add one now</a>.</div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <!-- Groups Tab -->
                    <div class="tab-content" id="groups-tab">
                        <div class="content-card">
                            <div class="card-header">
                                <div class="header-info">
                                    <h2>My Groups</h2>
                                    <p>All groups you manage</p>
                                </div>
                                <button class="btn btn-primary" id="openAddGroupModal" type="button"><i class="fas fa-plus"></i> Add Group</button>
                            </div>
                            <div class="card-content">
                                <% if (groups && groups.length) { %>
                                    <div class="table-container">
                                        <table class="data-table">
                                            <thead>
                                                <tr>
                                                    <th>Group Name</th>
                                                    <th>Type</th>
                                                    <th>Business</th>
                                                    <th>Created</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% groups.forEach(function(group) { %>
                                                    <tr>
                                                        <td><%= group.group_name %></td>
                                                        <td><%= group.group_type %></td>
                                                        <td><%= group.business_name %></td>
                                                        <td><%= group.created_at ? new Date(group.created_at).toLocaleDateString() : '-' %></td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="empty-placeholder">No groups found. <a href="/setup-group">Add one now</a>.</div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <!-- Orders Tab -->
                    <div class="tab-content" id="orders-tab">
                        <div class="content-card">
                            <div class="card-header">
                                <div class="header-info">
                                    <h2>Recent Orders</h2>
                                    <p>Your 5 most recent orders</p>
                                </div>
                            </div>
                            <div class="card-content">
                                <% if (recentOrders && recentOrders.length) { %>
                                    <div class="table-container">
                                        <table class="data-table">
                                            <thead>
                                                <tr>
                                                    <th>Order ID</th>
                                                    <th>Customer</th>
                                                    <th>Status</th>
                                                    <th>Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% recentOrders.forEach(function(order) { %>
                                                    <tr>
                                                        <td><%= order.order_id %></td>
                                                        <td><%= order.customer_name %></td>
                                                        <td><%= order.status %></td>
                                                        <td><%= order.created_at ? new Date(order.created_at).toLocaleDateString() : '-' %></td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="table-container">
                                        <table class="data-table">
                                            <thead>
                                                <tr>
                                                    <th>Order ID</th>
                                                    <th>Customer</th>
                                                    <th>Status</th>
                                                    <th>Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>—</td>
                                                    <td>No recent orders</td>
                                                    <td>—</td>
                                                    <td>—</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="content-card">
                    <div class="card-header">
                        <h3>Quick Actions</h3>
                    </div>
                    <div class="card-content">
                        <div class="quick-actions">
                            <a href="/dashboard" class="quick-action-btn"><i class="fas fa-home"></i> Overview</a>
                            <a href="/orders" class="quick-action-btn"><i class="fas fa-box"></i> Orders</a>
                            <a href="/groups" class="quick-action-btn"><i class="fas fa-users"></i> Groups</a>
                            <a href="/add-business" class="quick-action-btn"><i class="fas fa-building"></i> Businesses</a>
                        </div>
                    </div>
                </div>
                <div class="content-card">
                    <div class="card-header">
                        <h3>Recent Activity</h3>
                    </div>
                    <div class="card-content">
                        <div class="activity-feed">
                            <% if (recentOrders && recentOrders.length) { %>
                                <% recentOrders.forEach(function(order) { %>
                                    <div class="activity-item">
                                        <div class="activity-icon orders">
                                            <i class="fas fa-box"></i>
                                        </div>
                                        <div class="activity-content">
                                            <div class="activity-title">Order <%= order.order_id %></div>
                                            <div class="activity-description">Placed by <%= order.customer_name %></div>
                                            <div class="activity-time"><%= order.created_at ? new Date(order.created_at).toLocaleString() : '-' %></div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="activity-item">
                                    <div class="activity-icon system">
                                        <i class="fas fa-info-circle"></i>
                                    </div>
                                    <div class="activity-content">
                                        <div class="activity-title">No recent activity</div>
                                        <div class="activity-description">Your recent orders and group activity will appear here.</div>
                                        <div class="activity-time">-</div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Add Group Modal (copied from groups.ejs) -->
    <div class="modal-overlay" id="addGroupModal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New WhatsApp Group</h5>
                <button type="button" class="close-modal" id="closeAddGroupModal">&times;</button>
            </div>
            <div class="modal-body">
                <!-- Step 1: Business Selection -->
                <div id="businessSelectionStep">
                    <div style="background: rgba(59, 130, 246, 0.05); padding: 1.5rem; border-radius: 12px; margin-bottom: 1.5rem;">
                        <h6 style="margin: 0 0 1rem 0; color: var(--info-color); display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-building"></i> Select Business
                        </h6>
                        <p style="margin: 0; color: #64748b; line-height: 1.6;">
                            Choose which business you want to add a WhatsApp group to.
                        </p>
                    </div>
                    <div style="background: var(--card-bg); border: 1px solid var(--card-border); border-radius: 12px; padding: 1.5rem; margin-bottom: 1.5rem;">
                        <label for="businessSelect" style="display: block; font-weight: 600; margin-bottom: 0.75rem; color: var(--text-primary);">Business *</label>
                        <select id="businessSelect" style="width: 100%; padding: 0.75rem; border: 1px solid var(--card-border); border-radius: 8px; background: var(--card-bg); color: var(--text-primary); font-size: 0.875rem;">
                            <option value="" disabled selected>Select a business</option>
                            <% businesses.forEach(business => { %>
                                <% 
                                    const businessGroups = groups.filter(g => g.business_id === business.business_id);
                                    const hasSales = businessGroups.some(g => g.group_type === 'sales');
                                    const hasDelivery = businessGroups.some(g => g.group_type === 'delivery');
                                    const isAtLimit = hasSales && hasDelivery;
                                %>
                                <option value="<%= business.business_id %>" 
                                        data-business-name="<%= business.business_name %>"
                                        data-has-sales="<%= hasSales %>" 
                                        data-has-delivery="<%= hasDelivery %>" 
                                        data-setup-code="<%= business.setup_identifier || business.business_id %>"
                                        <%= isAtLimit ? 'disabled' : '' %>>
                                    <%= business.business_name %>
                                    <% if (isAtLimit) { %> (Has both groups) <% } else if (hasSales || hasDelivery) { %>
                                        (<%= hasSales ? 'Has sales' : '' %><%= hasSales && hasDelivery ? ', ' : '' %><%= hasDelivery ? 'Has delivery' : '' %>)
                                    <% } %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div style="text-align: center;">
                        <button type="button" class="btn btn-primary" onclick="showSetupInstructions()" id="continueBtn" disabled>
                            <i class="fas fa-arrow-right"></i> Continue
                        </button>
                    </div>
                </div>
                <!-- Step 2: Setup Instructions -->
                <div id="setupInstructionsStep" style="display: none;">
                    <div style="background: rgba(59, 130, 246, 0.05); padding: 1.5rem; border-radius: 12px; margin-bottom: 1.5rem;">
                        <h6 style="margin: 0 0 1rem 0; color: var(--info-color); display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-robot"></i> Setup Instructions for <span id="selectedBusinessName"></span>
                        </h6>
                        <p style="margin: 0; color: #64748b; line-height: 1.6;">
                            Follow these steps to add a WhatsApp group to your business.
                        </p>
                    </div>
                    <div style="background: var(--card-bg); border: 1px solid var(--card-border); border-radius: 12px; padding: 1.5rem; margin-bottom: 1.5rem;">
                        <h6 style="margin: 0 0 1rem 0; color: var(--text-primary);">How to Add a Group:</h6>
                        <ol style="margin: 0; padding-left: 1.5rem; color: var(--text-secondary); line-height: 1.8;">
                            <li style="margin-bottom: 0.75rem;">
                                <strong style="color: var(--text-primary);">Add the Bot to Your Group</strong><br>
                                <small>Add this WhatsApp number to your group as an admin:</small><br>
                                <div style="background: rgba(59, 130, 246, 0.1); padding: 0.75rem; border-radius: 8px; margin: 0.5rem 0; display: flex; justify-content: space-between; align-items: center;">
                                    <code id="botNumber" style="color: #3b82f6; font-weight: 600;">Loading...</code>
                                    <button type="button" class="btn btn-sm" onclick="copyBotNumber()" style="background: #3b82f6; color: white; border: none; padding: 0.25rem 0.75rem; border-radius: 6px; font-size: 0.75rem;">Copy</button>
                                </div>
                            </li>
                            <li style="margin-bottom: 0.75rem;">
                                <strong style="color: var(--text-primary);">Run the Setup Command</strong><br>
                                <small>In your WhatsApp group, type this command:</small><br>
                                <div style="background: rgba(59, 130, 246, 0.1); padding: 0.75rem; border-radius: 8px; margin: 0.5rem 0; display: flex; justify-content: space-between; align-items: center;">
                                    <code id="setupCommand" style="color: #3b82f6; font-weight: 600;">Select a business first</code>
                                    <button type="button" class="btn btn-sm" onclick="copySetupCommand()" style="background: #3b82f6; color: white; border: none; padding: 0.25rem 0.75rem; border-radius: 6px; font-size: 0.75rem;">Copy</button>
                                </div>
                            </li>
                            <li style="margin-bottom: 0.75rem;">
                                <strong style="color: var(--text-primary);">Choose Group Type</strong><br>
                                <small>The bot will ask if this is a "sales" or "delivery" group. Reply with:</small><br>
                                <div id="groupTypeOptions" style="display: flex; gap: 0.5rem; margin: 0.5rem 0;">
                                    <span style="background: rgba(16, 185, 129, 0.1); color: #10b981; padding: 0.25rem 0.75rem; border-radius: 6px; font-size: 0.75rem; font-weight: 600;">"sales"</span>
                                    <span style="background: rgba(59, 130, 246, 0.1); color: #3b82f6; padding: 0.25rem 0.75rem; border-radius: 6px; font-size: 0.75rem; font-weight: 600;">"delivery"</span>
                                </div>
                            </li>
                            <li>
                                <strong style="color: var(--text-primary);">That's It!</strong><br>
                                <small>The bot will automatically register your group and confirm the setup.</small>
                            </li>
                        </ol>
                    </div>
                    <div id="businessStatus" style="background: rgba(245, 158, 11, 0.05); border: 1px solid rgba(245, 158, 11, 0.2); border-radius: 12px; padding: 1.5rem; margin-bottom: 1.5rem;">
                        <h6 style="margin: 0 0 0.75rem 0; color: #f59e0b; display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-info-circle"></i> Business Status
                        </h6>
                        <div id="businessStatusContent">
                            Select a business to see its current group status.
                        </div>
                    </div>
                    <div style="text-align: center; margin-top: 1.5rem;">
                        <button type="button" class="btn btn-secondary" onclick="backToBusinessSelection()" style="margin-right: 0.5rem;">
                            <i class="fas fa-arrow-left"></i> Back
                        </button>
                        <button type="button" class="btn btn-primary" onclick="document.getElementById('closeAddGroupModal').click()">
                            <i class="fas fa-check"></i> Got It!
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Add Group Modal -->
    <script>
        // Theme toggle functionality
        const themeToggle = document.getElementById('theme-toggle');
        const html = document.documentElement;
        const savedTheme = localStorage.getItem('theme') || 'light';
        html.setAttribute('data-theme', savedTheme);
        updateThemeIcon(savedTheme);
        themeToggle.addEventListener('click', () => {
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon(newTheme);
        });
        function updateThemeIcon(theme) {
            const sunIcon = themeToggle.querySelector('i:nth-child(1)');
            const moonIcon = themeToggle.querySelector('i:nth-child(2)');
            sunIcon.style.display = theme === 'light' ? 'inline' : 'none';
            moonIcon.style.display = theme === 'dark' ? 'inline' : 'none';
        }
        // Tabs functionality
        const tabBtns = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');
        tabBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                tabBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                const tab = btn.getAttribute('data-tab');
                tabContents.forEach(tc => {
                    tc.classList.remove('active');
                    if (tc.id === tab) tc.classList.add('active');
                });
            });
        });
        // Profile dropdown functionality
        const profileBtn = document.getElementById('profileDropdown');
        const profileMenu = document.getElementById('profileMenu');
        if (profileBtn) {
            profileBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                profileMenu.parentElement.classList.toggle('active');
            });
            document.addEventListener('click', (e) => {
                if (!profileMenu.contains(e.target) && !profileBtn.contains(e.target)) {
                    profileMenu.parentElement.classList.remove('active');
                }
            });
        }
        // Add Group Modal JS (copied from groups.ejs)
        document.addEventListener('DOMContentLoaded', function () {
            // Modal
            const modal = document.getElementById('addGroupModal');
            const openModalBtn = document.getElementById('openAddGroupModal');
            const closeModalBtn = document.getElementById('closeAddGroupModal');
            function showModal() { modal.classList.add('show'); }
            function hideModal() { modal.classList.remove('show'); }
            if(openModalBtn) openModalBtn.addEventListener('click', showModal);
            if(closeModalBtn) closeModalBtn.addEventListener('click', hideModal);
            modal.addEventListener('click', (e) => {
                if (e.target === modal) hideModal();
            });
            // Two-step modal functionality
            const businessSelect = document.getElementById('businessSelect');
            const continueBtn = document.getElementById('continueBtn');
            businessSelect.addEventListener('change', function() {
                continueBtn.disabled = !this.value;
            });
            window.showSetupInstructions = function() {
                const selectedOption = businessSelect.options[businessSelect.selectedIndex];
                if (!selectedOption || !selectedOption.value) return;
                const businessName = selectedOption.getAttribute('data-business-name');
                const setupCode = selectedOption.getAttribute('data-setup-code');
                const hasSales = selectedOption.getAttribute('data-has-sales') === 'true';
                const hasDelivery = selectedOption.getAttribute('data-has-delivery') === 'true';
                document.getElementById('setupCommand').textContent = `/setup ${setupCode}`;
                document.getElementById('selectedBusinessName').textContent = businessName;
                const groupTypeOptions = document.getElementById('groupTypeOptions');
                groupTypeOptions.innerHTML = '';
                if (!hasSales) {
                    groupTypeOptions.innerHTML += '<span style="background: rgba(16, 185, 129, 0.1); color: #10b981; padding: 0.25rem 0.75rem; border-radius: 6px; font-size: 0.75rem; font-weight: 600;">"sales"</span>';
                }
                if (!hasDelivery) {
                    groupTypeOptions.innerHTML += '<span style="background: rgba(59, 130, 246, 0.1); color: #3b82f6; padding: 0.25rem 0.75rem; border-radius: 6px; font-size: 0.75rem; font-weight: 600;">"delivery"</span>';
                }
                const businessStatusContent = document.getElementById('businessStatusContent');
                let statusHTML = '';
                if (!hasSales && !hasDelivery) {
                    statusHTML = `<div style="color: var(--text-secondary); line-height: 1.6;"><p style="margin: 0 0 0.5rem 0;"><strong>No groups set up yet.</strong></p><p style="margin: 0;">You can add both a sales group and a delivery group for this business.</p></div>`;
                } else if (hasSales && hasDelivery) {
                    statusHTML = `<div style="color: var(--text-secondary); line-height: 1.6;"><p style="margin: 0 0 0.5rem 0;"><strong>All groups set up!</strong></p><p style="margin: 0;">This business already has both sales and delivery groups configured.</p></div>`;
                } else {
                    const availableType = hasSales ? 'delivery' : 'sales';
                    const existingType = hasSales ? 'sales' : 'delivery';
                    statusHTML = `<div style="color: var(--text-secondary); line-height: 1.6;"><p style="margin: 0 0 0.5rem 0;"><strong>${existingType.charAt(0).toUpperCase() + existingType.slice(1)} group already set up.</strong></p><p style="margin: 0;">You can add a ${availableType} group to complete your setup.</p></div>`;
                }
                businessStatusContent.innerHTML = statusHTML;
                document.getElementById('businessSelectionStep').style.display = 'none';
                document.getElementById('setupInstructionsStep').style.display = 'block';
            };
            window.backToBusinessSelection = function() {
                document.getElementById('setupInstructionsStep').style.display = 'none';
                document.getElementById('businessSelectionStep').style.display = 'block';
                businessSelect.value = '';
                continueBtn.disabled = true;
            };
            // Reset modal when closed
            closeModalBtn.addEventListener('click', function() {
                backToBusinessSelection();
            });
            // Load bot number
            async function loadBotInfo() {
                try {
                    const response = await fetch('/api/whatsapp/bot-info');
                    const botInfo = await response.json();
                    if (botInfo.success) {
                        document.getElementById('botNumber').textContent = botInfo.number;
                    } else {
                        document.getElementById('botNumber').textContent = 'Not available';
                    }
                } catch (error) {
                    document.getElementById('botNumber').textContent = 'Error loading';
                }
            }
            loadBotInfo();
            // Copy functions
            window.copyBotNumber = function() {
                const botNumber = document.querySelector('#botNumber').textContent;
                if (botNumber === 'Loading...' || botNumber === 'Not available' || botNumber === 'Error loading') {
                    alert('Bot number not available yet. Please try again in a moment.');
                    return;
                }
                navigator.clipboard.writeText(botNumber).then(() => {
                    const button = event.target;
                    button.textContent = 'Copied!';
                    setTimeout(() => {
                        button.textContent = 'Copy';
                    }, 2000);
                });
            }
            window.copySetupCommand = function() {
                const command = document.querySelector('code').textContent;
                navigator.clipboard.writeText(command).then(() => {
                    const button = event.target;
                    button.textContent = 'Copied!';
                    setTimeout(() => {
                        button.textContent = 'Copy';
                    }, 2000);
                });
            }
        });
