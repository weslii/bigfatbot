    .btn.btn-icon:hover { background: var(--primary-color); color: #fff; box-shadow: none; transform: none; }
    .dropdown { position: relative; display: inline-block; }
    .dropdown-content { 
        display: none; 
        position: absolute; 
        right: 0; 
