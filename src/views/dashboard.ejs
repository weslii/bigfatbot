    function showRevenueTab() {
        // Close mobile menu
        closeMobileMenu();
        
        // Switch to revenue tab
        const revenueTabBtn = document.querySelector('[data-tab="revenue-tab"]');
        const revenueTabContent = document.getElementById('revenue-tab');
        
        if (revenueTabBtn && revenueTabContent) {
            // Remove active from all tabs
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            // Add active to revenue tab
            revenueTabBtn.classList.add('active');
            revenueTabContent.classList.add('active');
        }
    }
