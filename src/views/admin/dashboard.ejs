<%- include('../layout', { title: 'Admin Dashboard' }) %>

<div class="container-fluid dashboard-container mt-4">
  <div class="row">
    <div class="col-md-3 col-lg-2">
      <div class="card sidebar-card rounded-4">
        <div class="card-body p-3">
          <% include('sidebar') %>
        </div>
      </div>
    </div>
    <div class="col-md-9 col-lg-10">
      <h2 class="fw-bold mb-4">Welcome, Admin!</h2>
      <div class="row g-4 mb-4">
        <div class="col-md-4">
          <div class="stat-card card rounded-4 shadow-sm text-center p-4">
            <div class="stat-label">Total Users</div>
            <div class="stat-value display-5 fw-bold"><%= stats.totalUsers %></div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="stat-card card rounded-4 shadow-sm text-center p-4">
            <div class="stat-label">Total Businesses</div>
            <div class="stat-value display-5 fw-bold"><%= stats.totalBusinesses %></div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="stat-card card rounded-4 shadow-sm text-center p-4">
            <div class="stat-label">Total Orders</div>
            <div class="stat-value display-5 fw-bold"><%= stats.totalOrders %></div>
          </div>
        </div>
      </div>
      <div class="mb-4">
        <h5 class="fw-bold">Recent Orders</h5>
        <div class="table-responsive rounded-4 shadow-sm bg-white p-0 mb-4">
          <table class="table table-borderless align-middle mb-0 dashboard-table">
            <thead class="table-light rounded-4">
              <tr>
                <th>Order ID</th>
                <th>Business</th>
                <th>Customer</th>
                <th>Status</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(order => { %>
                <tr>
                  <td><%= order.order_id %></td>
                  <td><%= order.business_name %></td>
                  <td><%= order.customer_name %></td>
                  <td><span class="badge bg-<%= order.status === 'completed' ? 'success' : order.status === 'pending' ? 'warning' : 'secondary' %>"><%= order.status %></span></td>
                  <td><%= new Date(order.created_at).toLocaleDateString() %></td>
                  <td>
                    <a href="/admin/orders/<%= order.order_id %>" class="btn btn-sm btn-action btn-view">View</a>
                    <a href="/admin/orders/<%= order.order_id %>/edit" class="btn btn-sm btn-action btn-edit">Edit</a>
                    <form action="/admin/orders/<%= order.order_id %>/delete" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-sm btn-action btn-delete">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <div>
        <h5 class="fw-bold">Active Businesses</h5>
        <div class="table-responsive rounded-4 shadow-sm bg-white p-0">
          <table class="table table-borderless align-middle mb-0 dashboard-table">
            <thead class="table-light rounded-4">
              <tr>
                <th>Business Name</th>
                <th>Owner</th>
                <th>Groups</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% businesses.forEach(biz => { %>
                <tr>
                  <td><%= biz.business_name %></td>
                  <td><%= biz.owner_name %></td>
                  <td><%= biz.total_groups %></td>
                  <td><span class="badge bg-<%= biz.is_active ? 'success' : 'secondary' %>"><%= biz.is_active ? 'Active' : 'Inactive' %></span></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div> 