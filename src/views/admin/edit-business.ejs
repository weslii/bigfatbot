<%- include('../layout', { title: business ? 'Edit Business' : 'Add Business' }) %>

<div class="container mt-5 pastel-blue-bg">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card pastel-blue-card text-dark">
        <div class="card-header">
          <h4><%= business ? 'Edit Business' : 'Add Business' %></h4>
        </div>
        <div class="card-body">
          <form action="<%= business ? '/admin/businesses/' + business.business_id + '/edit' : '/admin/businesses/add' %>" method="POST">
            <% if (!business) { %>
              <div class="mb-3">
                <label for="business_id" class="form-label">Business ID</label>
                <input type="text" class="form-control" id="business_id" name="business_id" required>
              </div>
            <% } %>
            <div class="mb-3">
              <label for="business_name" class="form-label">Business Name</label>
              <input type="text" class="form-control" id="business_name" name="business_name" value="<%= business ? business.business_name : '' %>" required>
            </div>
            <div class="mb-3">
              <label for="user_id" class="form-label">Owner User ID</label>
              <input type="text" class="form-control" id="user_id" name="user_id" value="<%= business ? business.user_id : '' %>" required>
            </div>
            <button type="submit" class="btn btn-primary"><%= business ? 'Save Changes' : 'Add Business' %></button>
            <a href="/admin/businesses" class="btn btn-secondary ms-2">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div> 