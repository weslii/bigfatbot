<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard Preview - WhatsApp Delivery Bot</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/admin-dashboard.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <div class="logo-section">
                <div class="logo-icon">
                    <i class="fab fa-whatsapp"></i>
                </div>
                <div class="logo-text">
                    <span class="main-title">Admin Dashboard</span>
                    <span class="sub-title">WhatsApp Delivery Bot</span>
                </div>
            </div>
            <div class="header-actions">
                <div class="search-container">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search businesses..." class="search-input" id="searchInput">
                </div>
                <button class="icon-btn" id="notificationBtn">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                <button class="icon-btn" id="themeToggle">
                    <i class="fas fa-moon"></i>
                </button>
                <div class="dropdown">
                    <button class="profile-btn" id="profileDropdown">
                        <i class="fas fa-shield-alt"></i>
                    </button>
                    <div class="dropdown-content" id="profileMenu">
                        <div class="profile-info">
                            <div class="profile-name"><%= admin ? admin.username : 'Admin User' %></div>
                            <div class="profile-email"><%= admin ? admin.email : 'admin@whatsappbot.com' %></div>
                        </div>
                        <hr>
                        <a href="#"><i class="fas fa-cog"></i> Settings</a>
                        <a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Log out</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main class="main-content">
        <!-- Stats Overview -->
        <section class="stats-grid">
            <div class="stat-card revenue">
                <div class="stat-header">
                    <span class="stat-title">Total Revenue</span>
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                </div>
                <div class="stat-value">$<%= stats && stats.totalRevenue ? stats.totalRevenue : '0.00' %></div>
                <div class="stat-change positive">+20.1% from last month</div>
            </div>
            <div class="stat-card businesses">
                <div class="stat-header">
                    <span class="stat-title">Active Businesses</span>
                    <div class="stat-icon">
                        <i class="fas fa-building"></i>
                    </div>
                </div>
                <div class="stat-value"><%= stats && stats.totalBusinesses ? stats.totalBusinesses : 0 %></div>
                <div class="stat-change positive">+180.1% from last month</div>
            </div>
            <div class="stat-card orders">
                <div class="stat-header">
                    <span class="stat-title">Total Orders</span>
                    <div class="stat-icon">
                        <i class="fas fa-box"></i>
                    </div>
                </div>
                <div class="stat-value"><%= stats && stats.totalOrders ? stats.totalOrders : 0 %></div>
                <div class="stat-change positive">+19% from last month</div>
            </div>
            <div class="stat-card uptime">
                <div class="stat-header">
                    <span class="stat-title">Bot Uptime</span>
                    <div class="stat-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                </div>
                <div class="stat-value">99.9%</div>
                <div class="stat-change positive">+0.1% from last month</div>
            </div>
        </section>
        <div class="dashboard-layout">
            <!-- Main Content -->
            <div class="main-panel">
                <!-- Tabs -->
                <div class="tabs-container">
                    <div class="tabs-header">
                        <div class="tabs-nav">
                            <button class="tab-btn active" data-tab="businesses">
                                <i class="fas fa-building"></i> Businesses
                            </button>
                            <button class="tab-btn" data-tab="orders">
                                <i class="fas fa-box"></i> Orders
                            </button>
                            <button class="tab-btn" data-tab="analytics">
                                <i class="fas fa-chart-bar"></i> Analytics
                            </button>
                            <button class="tab-btn" data-tab="bot">
                                <i class="fas fa-robot"></i> Bot Management
                            </button>
                        </div>
                        <div class="tabs-actions">
                            <button class="action-btn">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                            <button class="action-btn">
                                <i class="fas fa-download"></i> Export
                            </button>
                        </div>
                    </div>
                    <!-- Businesses Tab -->
                    <div class="tab-content active" id="businesses">
                        <div class="content-card">
                            <div class="card-header">
                                <div class="header-info">
                                    <h2>Business Management</h2>
                                    <p>Manage all registered businesses and their status</p>
                                </div>
                                <a href="/admin/businesses/add" class="primary-btn">
                                    <i class="fas fa-plus"></i> Add Business
                                </a>
                            </div>
                            <div class="card-content">
                                <div class="table-container">
                                    <table class="data-table">
                                        <thead>
                                            <tr>
                                                <th>Business</th>
                                                <th>Owner</th>
                                                <th>Status</th>
                                                <th>Orders</th>
                                                <th>Revenue</th>
                                                <th>Join Date</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <div class="business-info">
                                                        <div class="business-avatar">P</div>
                                                        <div class="business-details">
                                                            <div class="business-name">Pizza Palace</div>
                                                            <div class="business-id">biz-001</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="owner-info">
                                                        <div class="owner-name">Jane Doe</div>
                                                        <div class="owner-phone">+1 (555) 111-2222</div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="status-badge active">Active</span>
                                                </td>
                                                <td>1,234</td>
                                                <td class="revenue">$12,345</td>
                                                <td>2023-01-15</td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button class="action-menu-btn">
                                                            <i class="fas fa-ellipsis-h"></i>
                                                        </button>
                                                        <div class="dropdown-content">
                                                            <a href="/admin/businesses/biz-001">View Details</a>
                                                            <a href="/admin/businesses/biz-001/edit">Edit</a>
                                                            <hr>
                                                            <a href="#" class="danger">Suspend Business</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="business-info">
                                                        <div class="business-avatar">B</div>
                                                        <div class="business-details">
                                                            <div class="business-name">Burger Bros</div>
                                                            <div class="business-id">biz-002</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="owner-info">
                                                        <div class="owner-name">John Smith</div>
                                                        <div class="owner-phone">+1 (555) 333-4444</div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="status-badge pending">Pending</span>
                                                </td>
                                                <td>987</td>
                                                <td class="revenue">$8,765</td>
                                                <td>2023-02-10</td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button class="action-menu-btn">
                                                            <i class="fas fa-ellipsis-h"></i>
                                                        </button>
                                                        <div class="dropdown-content">
                                                            <a href="/admin/businesses/biz-002">View Details</a>
                                                            <a href="/admin/businesses/biz-002/edit">Edit</a>
                                                            <hr>
                                                            <a href="#" class="danger">Suspend Business</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Bot Management Tab -->
                    <div class="tab-content" id="bot">
                        <div class="bot-management-grid">
                            <div class="content-card">
                                <div class="card-header">
                                    <h3><i class="fab fa-whatsapp text-green"></i> WhatsApp Bot Status</h3>
                                    <p>Monitor and manage your WhatsApp bot connection</p>
                                </div>
                                <div class="card-content">
                                    <div class="status-item">
                                        <span>Connection Status</span>
                                        <span class="status-badge active">Connected</span>
                                    </div>
                                    <div class="status-item">
                                        <span>Phone Number</span>
                                        <span class="status-value">+1 (555) 123-4567</span>
                                    </div>
                                    <div class="status-item">
                                        <span>Last Activity</span>
                                        <span class="status-value">2 minutes ago</span>
                                    </div>
                                    <hr>
                                    <div class="bot-actions">
                                        <button class="secondary-btn">
                                            <i class="fas fa-qrcode"></i> Show QR
                                        </button>
                                        <button class="secondary-btn">
                                            <i class="fas fa-sync-alt"></i> Restart
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="content-card">
                                <div class="card-header">
                                    <h3><i class="fas fa-chart-line text-blue"></i> Bot Performance</h3>
                                    <p>Real-time bot performance metrics</p>
                                </div>
                                <div class="card-content">
                                    <div class="metric-item">
                                        <div class="metric-header">
                                            <span>Message Success Rate</span>
                                            <span class="metric-value">98.5%</span>
                                        </div>
                                        <div class="progress-bar">
                                            <div class="progress-fill" style="width: 98.5%"></div>
                                        </div>
                                    </div>
                                    <div class="metric-item">
                                        <div class="metric-header">
                                            <span>Response Time</span>
                                            <span class="metric-value">1.2s avg</span>
                                        </div>
                                        <div class="progress-bar">
                                            <div class="progress-fill" style="width: 85%"></div>
                                        </div>
                                    </div>
                                    <div class="metric-item">
                                        <div class="metric-header">
                                            <span>Daily Messages</span>
                                            <span class="metric-value">2,847</span>
                                        </div>
                                        <div class="progress-bar">
                                            <div class="progress-fill" style="width: 75%"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Other tabs content (orders, analytics) can be added similarly -->
                    <div class="tab-content" id="orders">
                        <div class="content-card">
                            <div class="card-header">
                                <h2>Order Management</h2>
                                <p>Monitor and manage all orders across the platform</p>
                            </div>
                            <div class="card-content">
                                <a href="/admin/orders" class="primary-btn">
                                    <i class="fas fa-list"></i> Go to Orders
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="tab-content" id="analytics">
                        <div class="content-card">
                            <div class="card-header">
                                <h2>Analytics Dashboard</h2>
                                <p>Comprehensive analytics and reporting</p>
                            </div>
                            <div class="card-content">
                                <a href="/admin/reports" class="primary-btn">
                                    <i class="fas fa-chart-bar"></i> Go to Reports
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="content-card">
                    <div class="card-header">
                        <h3>Quick Actions</h3>
                    </div>
                    <div class="card-content">
                        <div class="quick-actions">
                            <a href="/admin/businesses" class="quick-action-btn"><i class="fas fa-users"></i> View All Businesses</a>
                            <a href="/admin/orders" class="quick-action-btn"><i class="fas fa-box"></i> Monitor Orders</a>
                            <a href="/admin/users" class="quick-action-btn"><i class="fas fa-user"></i> Users</a>
                            <a href="/admin/admins" class="quick-action-btn"><i class="fas fa-user-shield"></i> Manage Admins</a>
                            <a href="/admin/reports" class="quick-action-btn"><i class="fas fa-chart-bar"></i> Generate Reports</a>
                            <a href="/admin/settings" class="quick-action-btn"><i class="fas fa-cog"></i> System Settings</a>
                        </div>
                    </div>
                </div>
                <div class="content-card">
                    <div class="card-header">
                        <h3>Recent Activity</h3>
                    </div>
                    <div class="card-content">
                        <div class="activity-feed">
                            <div class="activity-item">
                                <div class="activity-icon business">
                                    <i class="fas fa-building"></i>
                                </div>
                                <div class="activity-content">
                                    <div class="activity-title">New business registered</div>
                                    <div class="activity-description">Pizza Palace joined the platform</div>
                                    <div class="activity-time">2 hours ago</div>
                                </div>
                            </div>
                            <div class="activity-item">
                                <div class="activity-icon orders">
                                    <i class="fas fa-box"></i>
                                </div>
                                <div class="activity-content">
                                    <div class="activity-title">High order volume</div>
                                    <div class="activity-description">500+ orders processed today</div>
                                    <div class="activity-time">4 hours ago</div>
                                </div>
                            </div>
                            <div class="activity-item">
                                <div class="activity-icon system">
                                    <i class="fas fa-bolt"></i>
                                </div>
                                <div class="activity-content">
                                    <div class="activity-title">Bot maintenance</div>
                                    <div class="activity-description">System updated successfully</div>
                                    <div class="activity-time">6 hours ago</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="/js/admin-dashboard.js"></script>
</body>
</html> 