<%- include('header', { title: 'Register Business' }) %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Register Your Business</h4>
        </div>
        <div class="card-body">
          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>

          <form action="/register" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="mb-3">
              <label for="phoneNumber" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" 
                     pattern="[0-9]{10,15}" placeholder="e.g., 1234567890" required>
              <div class="form-text">Enter your WhatsApp number with country code (e.g., 1234567890)</div>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required minlength="6">
              <div class="form-text">Choose a password (at least 6 characters)</div>
            </div>

            <button type="submit" class="btn btn-primary">Continue to Business Setup</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %> 