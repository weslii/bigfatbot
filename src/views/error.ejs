<%- include('header', { title: 'Error' }) %>

<div class="container mt-5 pastel-blue-bg">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body text-center">
          <h1 class="display-1 text-danger mb-4">Oops!</h1>
          <h4 class="mb-4">Something went wrong</h4>
          
          <div class="alert alert-danger" role="alert">
            <%= error || 'An unexpected error occurred. Please try again later.' %>
          </div>

          <div class="mt-4">
            <a href="/" class="btn btn-primary">Go Home</a>
            <button onclick="window.history.back()" class="btn btn-outline-secondary ms-2">Go Back</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %> 