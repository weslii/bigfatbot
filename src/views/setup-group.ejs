<script src="/js/theme-utils.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Dropdown
        function setupDropdown(buttonId, menuId) {
            const dropdownBtn = document.getElementById(buttonId);
            const dropdownMenu = document.getElementById(menuId);

            if (dropdownBtn && dropdownMenu) {
                dropdownBtn.addEventListener('click', (event) => {
                    event.stopPropagation();
                    document.querySelectorAll('.dropdown-content.show').forEach(menu => {
                        if (menu.id !== menuId) menu.classList.remove('show');
                    });
                    dropdownMenu.classList.toggle('show');
                });
            }
        }
        setupDropdown('profileDropdown', 'profileMenu');
        window.addEventListener('click', () => document.querySelectorAll('.dropdown-content.show').forEach(m => m.classList.remove('show')));
        
        // Load bot info
        loadBotInfo();
    });
    
    async function loadBotInfo() {
        // Load WhatsApp bot info
        try {
            const whatsappResponse = await fetch('/api/whatsapp/bot-info?platform=whatsapp');
            const whatsappInfo = await whatsappResponse.json();
            if (whatsappInfo.success) {
                document.getElementById('whatsappBotNumber').textContent = whatsappInfo.number;
            } else {
                document.getElementById('whatsappBotNumber').textContent = 'Not available';
            }
        } catch (error) {
            console.error('Error loading WhatsApp bot info:', error);
            document.getElementById('whatsappBotNumber').textContent = 'Error loading';
        }

        // Load Telegram bot info
        try {
            const telegramResponse = await fetch('/api/telegram/bot-info?platform=telegram');
            const telegramInfo = await telegramResponse.json();
            if (telegramInfo.success) {
                document.getElementById('telegramBotUsername').textContent = telegramInfo.number;
            } else {
                document.getElementById('telegramBotUsername').textContent = 'Not available';
            }
        } catch (error) {
            console.error('Error loading Telegram bot info:', error);
            document.getElementById('telegramBotUsername').textContent = 'Error loading';
        }
    }
    
    function copyBotNumber(event, platform) {
        let botNumber = '';
        let botUsername = '';

        if (platform === 'whatsapp') {
            botNumber = document.getElementById('whatsappBotNumber').textContent;
            if (botNumber === 'Loading...' || botNumber === 'Not available' || botNumber === 'Error loading') {
                alert('WhatsApp bot number not available yet. Please try again in a moment.');
                return;
            }
        } else if (platform === 'telegram') {
            botUsername = document.getElementById('telegramBotUsername').textContent;
            if (botUsername === 'Loading...' || botUsername === 'Not available' || botUsername === 'Error loading') {
                alert('Telegram bot username not available yet. Please try again in a moment.');
                return;
            }
        }
        
        // Fallback for older browsers
        if (!navigator.clipboard) {
            const textArea = document.createElement('textarea');
            if (platform === 'whatsapp') {
                textArea.value = botNumber;
            } else {
                textArea.value = botUsername;
            }
            document.body.appendChild(textArea);
            textArea.select();
            try {
                document.execCommand('copy');
                const button = event.target.closest('.copy-btn');
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> Copied!';
                button.classList.add('copied');
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.classList.remove('copied');
                }, 2000);
            } catch (err) {
                alert('Failed to copy. Please try again.');
            }
            document.body.removeChild(textArea);
            return;
        }
        
        if (platform === 'whatsapp') {
            navigator.clipboard.writeText(botNumber).then(() => {
                const button = event.target.closest('.copy-btn');
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> Copied!';
                button.classList.add('copied');
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.classList.remove('copied');
                }, 2000);
            }).catch(() => {
                alert('Failed to copy. Please try again.');
            });
        } else {
            navigator.clipboard.writeText(botUsername).then(() => {
                const button = event.target.closest('.copy-btn');
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> Copied!';
                button.classList.add('copied');
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.classList.remove('copied');
                }, 2000);
            }).catch(() => {
                alert('Failed to copy. Please try again.');
            });
        }
    }

    function copySetupCommand(event) {
        const command = document.querySelector('.setup-command').textContent;
        
        // Fallback for older browsers
        if (!navigator.clipboard) {
            const textArea = document.createElement('textarea');
            textArea.value = command;
            document.body.appendChild(textArea);
            textArea.select();
            try {
                document.execCommand('copy');
                const button = event.target.closest('.copy-btn');
                const originalText = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> Copied!';
                button.classList.add('copied');
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.classList.remove('copied');
                }, 2000);
            } catch (err) {
                alert('Failed to copy. Please try again.');
            }
            document.body.removeChild(textArea);
            return;
        }
        
        navigator.clipboard.writeText(command).then(() => {
            const button = event.target.closest('.copy-btn');
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-check"></i> Copied!';
            button.classList.add('copied');
            setTimeout(() => {
                button.innerHTML = originalText;
                button.classList.remove('copied');
            }, 2000);
        }).catch(() => {
            alert('Failed to copy. Please try again.');
