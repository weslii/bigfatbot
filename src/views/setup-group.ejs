<%- include('header', { title: 'Setup WhatsApp Group' }) %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <%- include('sidebar') %>
    
    <!-- Main Content -->
    <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">
          <i class="fas fa-comments"></i> Setup WhatsApp Group
        </h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/business/<%= business.business_id %>" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Business
          </a>
        </div>
      </div>

      <!-- Business Info -->
      <div class="alert alert-info">
        <h5 class="alert-heading">Setting up group for: <%= business.business_name %></h5>
        <p class="mb-0">You can add up to 2 WhatsApp groups per business: 1 sales group and 1 delivery group.</p>
      </div>

      <!-- Current Groups Status -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">Current Groups</h5>
        </div>
        <div class="card-body">
          <% if (businessGroups && businessGroups.length > 0) { %>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>Group Name</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Created</th>
                  </tr>
                </thead>
                <tbody>
                  <% businessGroups.forEach(group => { %>
                    <tr>
                      <td><%= group.group_name %></td>
                      <td>
                        <span class="badge bg-<%= group.group_type === 'sales' ? 'success' : 'info' %>">
                          <%= group.group_type.charAt(0).toUpperCase() + group.group_type.slice(1) %>
                        </span>
                      </td>
                      <td><span class="badge bg-success">Active</span></td>
                      <td><%= new Date(group.created_at).toLocaleDateString() %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center py-4">
              <i class="fas fa-comments fa-3x text-muted mb-3"></i>
              <h5>No Groups Yet</h5>
              <p class="text-muted">This business doesn't have any WhatsApp groups configured yet.</p>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Add Group Form -->
      <% 
        const hasSales = businessGroups.some(g => g.group_type === 'sales');
        const hasDelivery = businessGroups.some(g => g.group_type === 'delivery');
        const canAddMore = !hasSales || !hasDelivery;
      %>
      
      <% if (canAddMore) { %>
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Add New Group</h5>
          </div>
          <div class="card-body">
            <form id="addGroupForm">
              <input type="hidden" name="business_id" value="<%= business.business_id %>">
              
              <div class="mb-3">
                <label for="groupType" class="form-label">Group Type *</label>
                <select class="form-select" id="groupType" name="group_type" required>
                  <option value="">Select group type</option>
                  <% if (!hasSales) { %>
                    <option value="sales">Sales Group</option>
                  <% } %>
                  <% if (!hasDelivery) { %>
                    <option value="delivery">Delivery Group</option>
                  <% } %>
                </select>
                <div class="form-text">
                  <% if (hasSales && hasDelivery) { %>
                    This business already has both groups configured.
                  <% } else if (hasSales) { %>
                    This business already has a sales group. You can add a delivery group.
                  <% } else if (hasDelivery) { %>
                    This business already has a delivery group. You can add a sales group.
                  <% } else { %>
                    Choose whether this is a sales group (for receiving orders) or delivery group (for managing deliveries).
                  <% } %>
                </div>
              </div>
              
              <div class="mb-3">
                <label for="groupName" class="form-label">Group Name *</label>
                <input type="text" class="form-control" id="groupName" name="group_name" required>
                <div class="form-text">The name of your WhatsApp group</div>
              </div>
              
              <div class="mb-3">
                <label for="groupId" class="form-label">Group ID *</label>
                <input type="text" class="form-control" id="groupId" name="group_id" required>
                <div class="form-text">Get this by typing /setup in your WhatsApp group</div>
              </div>
              
              <div class="alert alert-warning">
                <h6><i class="fas fa-exclamation-triangle"></i> Setup Instructions</h6>
                <ol class="mb-0">
                  <li>Create a WhatsApp group for your business</li>
                  <li>Add our bot to the group as an admin</li>
                  <li>Type <code>/setup <%= business.business_id %></code> in the group</li>
                  <li>Copy the Group ID that the bot provides</li>
                  <li>Enter the Group ID above and save</li>
                </ol>
              </div>
              
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Group
              </button>
            </form>
          </div>
        </div>
      <% } else { %>
        <div class="card">
          <div class="card-body text-center py-5">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h5>All Groups Configured</h5>
            <p class="text-muted">This business already has both sales and delivery groups configured.</p>
            <a href="/business/<%= business.business_id %>" class="btn btn-primary">
              <i class="fas fa-building"></i> Back to Business
            </a>
          </div>
        </div>
      <% } %>

      <!-- Help Section -->
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="mb-0">Need Help?</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6>Sales Groups</h6>
              <ul>
                <li>Customers place orders in this group</li>
                <li>Bot automatically processes orders</li>
                <li>Orders are forwarded to delivery group</li>
                <li>Customers receive order confirmations</li>
              </ul>
            </div>
            <div class="col-md-6">
              <h6>Delivery Groups</h6>
              <ul>
                <li>Delivery staff manage orders here</li>
                <li>Mark orders as delivered or cancelled</li>
                <li>Generate daily/weekly reports</li>
                <li>Track order status and progress</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('addGroupForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    try {
      const formData = new FormData(e.target);
      const response = await fetch('/api/groups', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          business_id: formData.get('business_id'),
          group_type: formData.get('group_type'),
          group_name: formData.get('group_name'),
          group_id: formData.get('group_id'),
          user_id: '<%= userId %>'
        })
      });
      
      const result = await response.json();
      
      if (response.ok) {
        alert('Group added successfully!');
        window.location.href = '/business/<%= business.business_id %>';
      } else {
        alert('Failed to add group: ' + result.error);
      }
    } catch (error) {
      alert('Error adding group: ' + error.message);
    }
  });
</script> 