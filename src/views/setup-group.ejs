<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Setup WhatsApp Groups</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/groups-dashboard.css">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <div class="header-left">
                <a href="/dashboard" class="logo-section">
                    <div class="logo-icon"><i class="fas fa-comments"></i></div>
                    <div class="logo-text"><span class="main-title">Setup Groups</span></div>
                </a>
            </div>
            <div class="header-right">
                <a href="/dashboard" class="nav-link">Dashboard</a>
                <a href="/orders" class="nav-link">Orders</a>
                <a href="/groups" class="nav-link">Groups</a>
                <button class="btn btn-icon" id="theme-toggle" aria-label="Toggle Theme">
                    <i class="fas fa-sun"></i><i class="fas fa-moon" style="display: none;"></i>
                </button>
                <div class="dropdown">
                    <button class="btn btn-icon" id="profileDropdown"><i class="fas fa-user"></i></button>
                    <div class="dropdown-content" id="profileMenu">
                        <a href="/settings" class="dropdown-item"><i class="fas fa-cog"></i> Settings</a>
                        <form action="/logout" method="post" class="dropdown-item" style="padding: 0; margin: 0;">
                            <button type="submit" style="all: unset; cursor: pointer; display: flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1rem; width: 100%;"><i class="fas fa-sign-out-alt"></i> Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="main-content">
        <!-- Page Header -->
        <div class="page-header">
            <div>
                <h1 class="page-title">Setup WhatsApp Groups</h1>
                <p class="page-subtitle">Configure groups for your business to start managing orders.</p>
            </div>
            <div class="header-actions-right">
                <a href="/dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Business Info Card -->
        <div style="background: var(--card-bg); backdrop-filter: blur(5px); border: 1px solid var(--card-border); border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);" class="card-hover">
            <div style="padding: 1.5rem;">
                <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                    <div style="width: 48px; height: 48px; background: #10b981; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 600; font-size: 1.25rem;"><%= business.business_name.charAt(0).toUpperCase() %></div>
                    <div>
                        <h2 style="font-size: 1.5rem; font-weight: 700; margin: 0; color: var(--text-primary);"><%= business.business_name %></h2>
                        <p style="margin: 0; color: var(--text-secondary);">Business Setup</p>
                    </div>
                </div>
                <div style="background: rgba(59, 130, 246, 0.05); border-radius: 8px; padding: 1rem;">
                    <p style="margin: 0; color: var(--text-secondary); font-size: 0.875rem;">
                        <i class="fas fa-info-circle" style="color: var(--info-color); margin-right: 0.5rem;"></i>
                        You can add up to 2 WhatsApp groups per business: 1 sales group and 1 delivery group.
                    </p>
                </div>
            </div>
        </div>

        <!-- Current Groups Status -->
        <div style="background: var(--card-bg); backdrop-filter: blur(5px); border: 1px solid var(--card-border); border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);" class="card-hover">
            <div style="padding: 1.5rem; border-bottom: 1px solid var(--card-border);">
                <h3 style="font-size: 1.125rem; font-weight: 600; margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-list-alt"></i> Current Groups
                </h3>
            </div>
            <div style="padding: 1.5rem;">
                <% if (businessGroups && businessGroups.length > 0) { %>
                    <div style="display: grid; gap: 1rem;">
                        <% businessGroups.forEach(group => { %>
                            <div style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; background: rgba(0, 0, 0, 0.02); border-radius: 8px; border: 1px solid var(--card-border);">
                                <div style="display: flex; align-items: center; gap: 1rem;">
                                    <div style="width: 40px; height: 40px; background: <%= group.group_type === 'sales' ? '#10b981' : '#3b82f6' %>; color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 600;">
                                        <i class="fas fa-<%= group.group_type === 'sales' ? 'shopping-cart' : 'truck' %>"></i>
                                    </div>
                                    <div>
                                        <h4 style="margin: 0; font-weight: 600; color: var(--text-primary);"><%= group.group_name %></h4>
                                        <p style="margin: 0; font-size: 0.875rem; color: var(--text-secondary);"><%= group.group_type.charAt(0).toUpperCase() + group.group_type.slice(1) %> Group</p>
                                    </div>
                                </div>
                                <div style="display: flex; align-items: center; gap: 1rem;">
                                    <span style="display: inline-flex; align-items: center; padding: 0.25rem 0.75rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; background: rgb(16 185 129 / 0.1); color: #10b981;">
                                        <i class="fas fa-check-circle"></i> Active
                                    </span>
                                    <span style="font-size: 0.875rem; color: var(--text-muted);"><%= new Date(group.created_at).toLocaleDateString() %></span>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div style="text-align: center; padding: 2rem;">
                        <div style="font-size: 3rem; color: var(--text-muted); margin-bottom: 1rem;"><i class="fas fa-comments"></i></div>
                        <h4 style="margin: 0 0 0.5rem 0; color: var(--text-primary);">No Groups Yet</h4>
                        <p style="margin: 0; color: var(--text-secondary);">This business doesn't have any WhatsApp groups configured yet.</p>
                    </div>
                <% } %>
            </div>
        </div>

        <% 
            const hasSales = businessGroups.some(g => g.group_type === 'sales');
            const hasDelivery = businessGroups.some(g => g.group_type === 'delivery');
            const canAddMore = !hasSales || !hasDelivery;
        %>
        
        <% if (canAddMore) { %>
            <!-- Add Group Form -->
            <div style="background: var(--card-bg); backdrop-filter: blur(5px); border: 1px solid var(--card-border); border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);" class="card-hover">
                <div style="padding: 1.5rem; border-bottom: 1px solid var(--card-border);">
                    <h3 style="font-size: 1.125rem; font-weight: 600; margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-plus"></i> Add New Group
                    </h3>
                </div>
                <div style="padding: 1.5rem;">
                    <form id="addGroupForm" style="display: grid; gap: 1.5rem;">
                        <input type="hidden" name="business_id" value="<%= business.business_id %>">
                        
                        <div style="display: grid; gap: 0.5rem;">
                            <label for="groupType" style="font-weight: 600; color: var(--text-primary);">Group Type *</label>
                            <select id="groupType" name="group_type" required style="padding: 0.75rem; border: 1px solid var(--card-border); border-radius: 8px; background: var(--card-bg); color: var(--text-primary); font-size: 0.875rem;">
                                <option value="">Select group type</option>
                                <% if (!hasSales) { %>
                                    <option value="sales">Sales Group</option>
                                <% } %>
                                <% if (!hasDelivery) { %>
                                    <option value="delivery">Delivery Group</option>
                                <% } %>
                            </select>
                            <p style="margin: 0; font-size: 0.875rem; color: var(--text-muted);">
                                <% if (hasSales && hasDelivery) { %>
                                    This business already has both groups configured.
                                <% } else if (hasSales) { %>
                                    This business already has a sales group. You can add a delivery group.
                                <% } else if (hasDelivery) { %>
                                    This business already has a delivery group. You can add a sales group.
                                <% } else { %>
                                    Choose whether this is a sales group (for receiving orders) or delivery group (for managing deliveries).
                                <% } %>
                            </p>
                        </div>
                        
                        <div style="display: grid; gap: 0.5rem;">
                            <label for="groupName" style="font-weight: 600; color: var(--text-primary);">Group Name *</label>
                            <input type="text" id="groupName" name="group_name" required style="padding: 0.75rem; border: 1px solid var(--card-border); border-radius: 8px; background: var(--card-bg); color: var(--text-primary); font-size: 0.875rem;" placeholder="Enter your WhatsApp group name">
                            <p style="margin: 0; font-size: 0.875rem; color: var(--text-muted);">The name of your WhatsApp group</p>
                        </div>
                        
                        <div style="display: grid; gap: 0.5rem;">
                            <label for="groupId" style="font-weight: 600; color: var(--text-primary);">Group ID *</label>
                            <input type="text" id="groupId" name="group_id" required style="padding: 0.75rem; border: 1px solid var(--card-border); border-radius: 8px; background: var(--card-bg); color: var(--text-primary); font-size: 0.875rem;" placeholder="Enter the group ID from WhatsApp">
                            <p style="margin: 0; font-size: 0.875rem; color: var(--text-muted);">Get this by typing /setup in your WhatsApp group</p>
                        </div>
                        
                        <button type="submit" class="btn btn-primary" style="justify-self: start;">
                            <i class="fas fa-plus"></i> Add Group
                        </button>
                    </form>
                </div>
            </div>

            <!-- Setup Instructions -->
            <div style="background: var(--card-bg); backdrop-filter: blur(5px); border: 1px solid var(--card-border); border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);" class="card-hover">
                <div style="padding: 1.5rem; border-bottom: 1px solid var(--card-border);">
                    <h3 style="font-size: 1.125rem; font-weight: 600; margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-robot"></i> Setup Instructions
                    </h3>
                </div>
                <div style="padding: 1.5rem;">
                    <div style="display: grid; gap: 1.5rem;">
                        <!-- Step 1 -->
                        <div style="display: grid; gap: 0.75rem;">
                            <h4 style="margin: 0; font-weight: 600; color: var(--text-primary); display: flex; align-items: center; gap: 0.5rem;">
                                <span style="width: 24px; height: 24px; background: var(--primary-color); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.75rem; font-weight: 600;">1</span>
                                Add Our Bot to Your Group
                            </h4>
                            <p style="margin: 0; color: var(--text-secondary);">Add this WhatsApp number to your group as an admin:</p>
                            <div style="background: rgba(59, 130, 246, 0.05); padding: 1rem; border-radius: 8px; display: flex; justify-content: space-between; align-items: center;">
                                <div>
                                    <strong style="color: var(--text-primary);">Bot Number:</strong>
                                    <code id="botNumber" style="color: var(--info-color); font-weight: 600; margin-left: 0.5rem;">Loading...</code>
                                </div>
                                <button type="button" class="btn btn-sm" onclick="copyBotNumber()" style="background: var(--info-color); color: white; border: none; padding: 0.5rem 1rem; border-radius: 6px; font-size: 0.75rem;">Copy</button>
                            </div>
                            <p style="margin: 0; font-size: 0.875rem; color: var(--text-muted);">Make sure to give the bot admin permissions for full functionality</p>
                        </div>

                        <!-- Step 2 -->
                        <div style="display: grid; gap: 0.75rem;">
                            <h4 style="margin: 0; font-weight: 600; color: var(--text-primary); display: flex; align-items: center; gap: 0.5rem;">
                                <span style="width: 24px; height: 24px; background: var(--primary-color); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.75rem; font-weight: 600;">2</span>
                                Run the Setup Command
                            </h4>
                            <p style="margin: 0; color: var(--text-secondary);">In your WhatsApp group, type this exact command:</p>
                            <div style="background: rgba(59, 130, 246, 0.05); padding: 1rem; border-radius: 8px; display: flex; justify-content: space-between; align-items: center;">
                                <code style="color: var(--info-color); font-weight: 600; user-select: all;">/setup <%= business.setup_identifier || business.business_id %></code>
                                <button type="button" class="btn btn-sm" onclick="copySetupCommand()" style="background: var(--info-color); color: white; border: none; padding: 0.5rem 1rem; border-radius: 6px; font-size: 0.75rem;">Copy</button>
                            </div>
                        </div>

                        <!-- Step 3 -->
                        <div style="display: grid; gap: 0.75rem;">
                            <h4 style="margin: 0; font-weight: 600; color: var(--text-primary); display: flex; align-items: center; gap: 0.5rem;">
                                <span style="width: 24px; height: 24px; background: var(--primary-color); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.75rem; font-weight: 600;">3</span>
                                Choose Group Type
                            </h4>
                            <p style="margin: 0; color: var(--text-secondary);">The bot will ask if this is a "sales" or "delivery" group. Reply with:</p>
                            <div style="display: flex; gap: 1rem;">
                                <span style="background: rgba(16, 185, 129, 0.1); color: #10b981; padding: 0.5rem 1rem; border-radius: 6px; font-size: 0.875rem; font-weight: 600;">"sales"</span>
                                <span style="background: rgba(59, 130, 246, 0.1); color: var(--info-color); padding: 0.5rem 1rem; border-radius: 6px; font-size: 0.875rem; font-weight: 600;">"delivery"</span>
                            </div>
                        </div>

                        <!-- Step 4 -->
                        <div style="display: grid; gap: 0.75rem;">
                            <h4 style="margin: 0; font-weight: 600; color: var(--text-primary); display: flex; align-items: center; gap: 0.5rem;">
                                <span style="width: 24px; height: 24px; background: var(--primary-color); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.75rem; font-weight: 600;">4</span>
                                Get Group ID and Save
                            </h4>
                            <p style="margin: 0; color: var(--text-secondary);">After setup, the bot will provide a Group ID. Copy it and enter it in the form above, then save the group.</p>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <!-- All Groups Configured -->
            <div style="background: var(--card-bg); backdrop-filter: blur(5px); border: 1px solid var(--card-border); border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);" class="card-hover">
                <div style="padding: 3rem; text-align: center;">
                    <div style="font-size: 3rem; color: #10b981; margin-bottom: 1rem;"><i class="fas fa-check-circle"></i></div>
                    <h3 style="margin: 0 0 0.5rem 0; color: var(--text-primary);">All Groups Configured</h3>
                    <p style="margin: 0 0 1.5rem 0; color: var(--text-secondary);">This business already has both sales and delivery groups configured.</p>
                    <a href="/dashboard" class="btn btn-primary">
                        <i class="fas fa-home"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        <% } %>

        <!-- Help Section -->
        <div style="background: var(--card-bg); backdrop-filter: blur(5px); border: 1px solid var(--card-border); border-radius: 16px; box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);" class="card-hover">
            <div style="padding: 1.5rem; border-bottom: 1px solid var(--card-border);">
                <h3 style="font-size: 1.125rem; font-weight: 600; margin: 0; display: flex; align-items: center; gap: 0.5rem;">
                    <i class="fas fa-question-circle"></i> Need Help?
                </h3>
            </div>
            <div style="padding: 1.5rem;">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem;">
                    <div>
                        <h4 style="margin: 0 0 1rem 0; color: var(--text-primary); display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-shopping-cart" style="color: #10b981;"></i> Sales Groups
                        </h4>
                        <ul style="margin: 0; padding-left: 1.5rem; color: var(--text-secondary); line-height: 1.6;">
                            <li>Customers place orders in this group</li>
                            <li>Bot automatically processes orders</li>
                            <li>Orders are forwarded to delivery group</li>
                            <li>Customers receive order confirmations</li>
                        </ul>
                    </div>
                    <div>
                        <h4 style="margin: 0 0 1rem 0; color: var(--text-primary); display: flex; align-items: center; gap: 0.5rem;">
                            <i class="fas fa-truck" style="color: var(--info-color);"></i> Delivery Groups
                        </h4>
                        <ul style="margin: 0; padding-left: 1.5rem; color: var(--text-secondary); line-height: 1.6;">
                            <li>Delivery staff manage orders here</li>
                            <li>Mark orders as delivered or cancelled</li>
                            <li>Generate daily/weekly reports</li>
                            <li>Track order status and progress</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Theme toggle
            const themeToggle = document.getElementById('theme-toggle');
            const html = document.documentElement;
            const sunIcon = themeToggle.querySelector('.fa-sun');
            const moonIcon = themeToggle.querySelector('.fa-moon');

            function applyTheme(theme) {
                html.setAttribute('data-theme', theme);
                if (theme === 'dark') {
                    sunIcon.style.display = 'none';
                    moonIcon.style.display = 'inline-block';
                } else {
                    sunIcon.style.display = 'inline-block';
                    moonIcon.style.display = 'none';
                }
            }

            const savedTheme = localStorage.getItem('theme') || 'light';
            applyTheme(savedTheme);

            themeToggle.addEventListener('click', () => {
                const newTheme = html.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
                localStorage.setItem('theme', newTheme);
                applyTheme(newTheme);
            });

            // Dropdown
            function setupDropdown(buttonId, menuId) {
                const dropdownBtn = document.getElementById(buttonId);
                const dropdownMenu = document.getElementById(menuId);

                if (dropdownBtn && dropdownMenu) {
                    dropdownBtn.addEventListener('click', (event) => {
                        event.stopPropagation();
                        document.querySelectorAll('.dropdown-content.show').forEach(menu => {
                            if (menu.id !== menuId) menu.classList.remove('show');
                        });
                        dropdownMenu.classList.toggle('show');
                    });
                }
            }
            setupDropdown('profileDropdown', 'profileMenu');
            window.addEventListener('click', () => document.querySelectorAll('.dropdown-content.show').forEach(m => m.classList.remove('show')));

            // Form submission
            document.getElementById('addGroupForm')?.addEventListener('submit', async (e) => {
                e.preventDefault();
                
                try {
                    const formData = new FormData(e.target);
                    const response = await fetch('/api/groups', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            business_id: formData.get('business_id'),
                            group_type: formData.get('group_type'),
                            group_name: formData.get('group_name'),
                            group_id: formData.get('group_id'),
                            user_id: '<%= userId %>'
                        })
                    });
                    
                    const result = await response.json();
                    
                    if (response.ok) {
                        alert('Group added successfully!');
                        window.location.reload();
                    } else {
                        alert('Failed to add group: ' + result.error);
                    }
                } catch (error) {
                    alert('Error adding group: ' + error.message);
                }
            });

            // Load bot number
            async function loadBotInfo() {
                try {
                    const response = await fetch('/api/whatsapp/bot-info');
                    const botInfo = await response.json();
                    
                    if (botInfo.success) {
                        document.getElementById('botNumber').textContent = botInfo.number;
                    } else {
                        document.getElementById('botNumber').textContent = 'Not available';
                    }
                } catch (error) {
                    console.error('Error loading bot info:', error);
                    document.getElementById('botNumber').textContent = 'Error loading';
                }
            }
            loadBotInfo();
        });

        function copyBotNumber() {
            const botNumber = document.querySelector('#botNumber').textContent;
            if (botNumber === 'Loading...' || botNumber === 'Not available' || botNumber === 'Error loading') {
                alert('Bot number not available yet. Please try again in a moment.');
                return;
            }
            navigator.clipboard.writeText(botNumber).then(() => {
                const button = event.target;
                button.textContent = 'Copied!';
                setTimeout(() => {
                    button.textContent = 'Copy';
                }, 2000);
            });
        }

        function copySetupCommand() {
            const command = document.querySelector('code').textContent;
            navigator.clipboard.writeText(command).then(() => {
                const button = event.target;
                button.textContent = 'Copied!';
                setTimeout(() => {
                    button.textContent = 'Copy';
                }, 2000);
            });
        }
    </script>
    <style>
        /* Fix nav-link color for visibility */
        .header .nav-link {
            color: var(--primary-color);
            background: transparent;
        }
        .header .nav-link.active {
            background: var(--primary-color);
            color: #fff;
        }
        .header .nav-link:hover {
            color: #059669;
            background: var(--surface-color);
        }
    </style>
</body>
</html> 