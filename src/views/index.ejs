<%- include('header', { title: 'WhatsApp Delivery Bot' }) %>

<div class="container mt-5 pastel-blue-bg">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h1 class="display-4 mb-4">WhatsApp Delivery Bot</h1>
      <p class="lead mb-4">
        Streamline your delivery business with our WhatsApp bot. Manage orders, track deliveries, and keep your customers informed.
      </p>
      
      <div class="row mt-5">
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">For Businesses</h5>
              <p class="card-text">Register your business and start managing deliveries efficiently.</p>
              <a href="/register" class="btn btn-primary">Register Business</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">For Users</h5>
              <p class="card-text">Access your dashboard to manage your orders and deliveries.</p>
              <% if (typeof userId !== 'undefined' && userId) { %>
                <a href="/dashboard?userId=<%= userId %>" class="btn btn-success">Go to Dashboard</a>
              <% } else { %>
                <a href="/login" class="btn btn-success">User Login</a>
              <% } %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title">For Administrators</h5>
              <p class="card-text">Access the admin dashboard to manage all businesses.</p>
              <a href="/admin/login" class="btn btn-secondary">Admin Login</a>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Features</h5>
              <div class="row">
                <div class="col-md-4">
                  <h6>Order Management</h6>
                  <p>Track and manage all your delivery orders in one place</p>
                </div>
                <div class="col-md-4">
                  <h6>Automated Updates</h6>
                  <p>Keep customers informed with automated status updates</p>
                </div>
                <div class="col-md-4">
                  <h6>Business Analytics</h6>
                  <p>Get insights into your delivery business performance</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %> 