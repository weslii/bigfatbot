<%- include('header', { title: 'Add New Business' }) %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Add New Business</h4>
        </div>
        <div class="card-body">
          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>

          <form action="/add-business" method="POST">
            <input type="hidden" name="userId" value="<%= userId %>">
            
            <div class="mb-3">
              <label for="businessName" class="form-label">Business Name</label>
              <input type="text" class="form-control" id="businessName" name="businessName" required>
              <div class="form-text">This will be used to identify your new business in the system</div>
            </div>

            <div class="alert alert-info" role="alert">
              <h5 class="alert-heading">Next Steps</h5>
              <p>After creating your new business, you'll need to:</p>
              <ol class="mb-0">
                <li>Add our bot to your new business's WhatsApp groups</li>
                <li>Type the setup command in each group</li>
                <li>Start managing your deliveries!</li>
              </ol>
            </div>

            <div class="d-flex justify-content-between">
              <a href="/dashboard" class="btn btn-secondary">Cancel</a>
              <button type="submit" class="btn btn-primary">Create Business</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('footer') %> 