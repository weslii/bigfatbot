    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <div class="badge fade-in">
                    <i class="fas fa-bolt"></i>
                    Streamline Your Delivery Business
                </div>

                <h1 class="fade-in">WhatsApp Delivery Bot</h1>

                <p class="fade-in">
