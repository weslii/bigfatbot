            <div class="logo">
                <div class="logo-icon">
                    <i class="fab fa-whatsapp"></i>
                </div>
                <div class="logo-text">WhatsApp Delivery Bot</div>
            </div>

            <nav class="nav">
                <a href="#features" class="nav-link">Features</a>
                <a href="#pricing" class="nav-link">Pricing</a>
